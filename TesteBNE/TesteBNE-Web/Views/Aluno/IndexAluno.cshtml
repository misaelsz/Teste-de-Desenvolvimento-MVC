@{
	Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title></title>
</head>
<body>
	<div>
		<h1>Lista de alunos</h1>
	</div>

	<button id="btnListarAlunos" class="button-listar" onclick="get(listar);">Listar Alunos Cadastrados</button>

	<div>
		@Html.ActionLink("Cadastrar novo Aluno", "CadastroAluno", "Aluno", null, null)
	</div>

	<div>
		<table class="table" id="listaAlunos">
			<thead class="thead-dark">
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nome</th>

					<th scope="col">Editar</th>
					<th scope="col">Excluir</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
	<link rel='stylesheet' href='editar.css'>
	<form class="modal-content animate">
		<div class="imgcontainer">
			<span onclick="document.getElementById('confirm').style.display='none'" class="close" title="Close Modal">&times;</span>
		</div>

		<p style="text-align:center">Tem certeza que quer realmente excluir?</p>

		<div class="container" style="background-color:#f1f1f1">
			<button type="button" id="btnConfirm" value="sim" class="btn btn-primary">Sim</button>
			<button type="button" onclick="document.getElementById('confirm').style.display='none'" class="cancelbtn">Cancel</button>
		</div>
	</form>

	@section ScriptsListar{
		<script src="~/Scripts/listarAlunos.js"></script>
		<script src="~/Scripts/botaoExcluir.js"></script>
	}
</body>
</html>
